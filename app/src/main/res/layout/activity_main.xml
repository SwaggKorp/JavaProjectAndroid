<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <GridLayout android:id="@+id/layout_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_above="@+id/textViewX"
        android:layout_alignParentTop="true">
    </GridLayout>

    <TextView android:id="@+id/textViewX"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_above="@+id/textViewY"
        android:text="X: " />

    <TextView android:id="@+id/textViewY"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_above="@+id/textViewDirection"
        android:text="Y: "/>

    <TextView android:id="@+id/textViewDirection"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_above="@+id/layout_joystick"
        android:text="Direction: " />

    <RelativeLayout
        android:id="@+id/layout_joystick"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/emptyspace"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/image_button_bg">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/emptyspace"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true">
    </RelativeLayout>



</RelativeLayout>
